<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/profile_main_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp">
        <ImageView
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_arrow_back"
            android:layout_centerVertical="true"
            android:padding="16dp"
            android:id="@+id/back_arrow"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:layout_centerVertical="true"
            android:textColor="#fff"
            android:textSize="20sp"
            android:layout_toEndOf="@id/back_arrow"
            android:layout_marginStart="30dp"/>
        <ImageView
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_logout"
            android:layout_alignParentEnd="true"
            android:padding="16dp"
            android:tint="#fff"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="400dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:padding="10dp"
        android:gravity="center_vertical"
        android:background="@drawable/profile_bg">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            app:srcCompat="@mipmap/ic_launcher_round" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView"

            android:text="Rohit Kumar singh"
            android:textColor="#fff"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name"
            android:text="OJ-2020"
            android:textColor="#fff"
            android:textSize="18sp" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/events"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="20dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/events_iv"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_renew"
            android:tint="#fff"/>

        <TextView
            android:id="@+id/events_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Events Interested"
            android:textColor="#fff"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/comp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="60dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_above="@+id/events"
        android:layout_marginBottom="40dp">

        <ImageView
            android:id="@+id/comp_iv"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_event"
            android:tint="#fff"/>

        <TextView
            android:id="@+id/comp_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Events"
            android:textColor="#fff"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/merch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="60dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_below="@+id/events"
        android:layout_marginTop="40dp">

        <ImageView
            android:id="@+id/merch_iv"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_shirt"
            android:tint="#fff"/>

        <TextView
            android:id="@+id/merch_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Merchandise"
            android:textColor="#fff"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/qr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="150dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_above="@+id/comp"
        android:layout_marginBottom="30dp">

        <ImageView
            android:id="@+id/qr_iv"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/qr_code"
            android:tint="#fff"/>

        <TextView
            android:id="@+id/qr_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My QR"
            android:textColor="#fff"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="150dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_below="@id/merch"
        android:layout_marginTop="30dp">

        <ImageView
            android:id="@+id/dev_iv"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_dev"
            android:tint="#fff"/>

        <TextView
            android:id="@+id/dev_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Developers"
            android:textColor="#fff"
            android:textSize="20sp"/>
    </LinearLayout>


</RelativeLayout>