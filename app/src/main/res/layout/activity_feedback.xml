<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f0f0f0"
    tools:context=".Activities.FeedbackActivity">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        app:title="FeedBack Form"
        android:id="@+id/FeedBackPageToolbar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="9"
        android:orientation="vertical">

        <EditText
            android:padding="5dp"
            android:id="@+id/FeedbackEmail"
            android:background="#ffffff"
            android:layout_margin="30dp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:hint="Email"
            android:layout_gravity="center"
            android:layout_weight="1"/>
        <EditText
            android:padding="5dp"
            android:background="#ffffff"
            android:layout_margin="30dp"
            android:id="@+id/FeedBackName"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:hint="Name"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_weight="1"/>
        <EditText
            android:padding="5dp"
            android:background="#ffffff"
            android:id="@+id/FeedBackSubject"
            android:layout_margin="30dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:hint="Subject"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_weight="1"/>
        <EditText
            android:textAlignment="center"
            android:padding="5dp"
            android:background="#ffffff"
            android:layout_margin="30dp"
            android:id="@+id/FeedbackFeedBack"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:hint="FeedBack"

            android:layout_weight="5"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:textColor="#ffffff"
            android:padding="20dp"
            android:id="@+id/FeedbackSubmit"
            android:layout_marginHorizontal="20dp"
            android:background="#22d61b"/>
    </LinearLayout>


</LinearLayout>