<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@mipmap/events_background"
    >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".Activities.FeedbackActivity"
    >
    <include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText

            android:id="@+id/FeedbackEmail"
            android:background="#ffffff"
            android:layout_margin="30dp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Email"
            android:textSize="16sp"
            android:layout_gravity="center"
           />
        <EditText

            android:background="#ffffff"
            android:layout_margin="30dp"
            android:id="@+id/FeedBackName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Name"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textSize="16sp"
           />
        <EditText

            android:background="#ffffff"
            android:id="@+id/FeedBackSubject"
            android:layout_margin="30dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Subject"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textSize="16sp"
            />
        <EditText

            android:background="#ffffff"
            android:layout_margin="30dp"
            android:id="@+id/FeedbackFeedBack"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:hint="FeedBack"
            android:gravity="start"
            android:maxLines="10"


            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:textColor="#ffffff"
            android:padding="20dp"
            android:id="@+id/FeedbackSubmit"
            android:layout_marginHorizontal="20dp"
            android:background="#22d61b"/>
    </LinearLayout>


</LinearLayout>
</ScrollView>