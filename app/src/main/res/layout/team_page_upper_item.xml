<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_weight="8"
            android:layout_height="0dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="800dp"
                android:scaleType="fitXY"
                android:src="@drawable/joker"
                android:id="@+id/profile_image_team_member_upper"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/navHeader"
                android:alpha="0.6"
                android:layout_alignParentBottom="true"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="25sp"
                    android:fontFamily="@font/opensans"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:id="@+id/team_member_name_upper"
                    android:text="Name"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:fontFamily="@font/opensans"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:id="@+id/team_member_designation_upper"
                    android:text="Designation"/>

            </LinearLayout>
        </RelativeLayout>
<!--    <RelativeLayout-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="0dp"-->
<!--        android:orientation="vertical"-->
<!--        android:layout_weight="2">-->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:weightSum="4">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="0.5"
                android:id="@+id/left_arrow_team"
                android:src="@drawable/ic_chevron_left_black_24dp"
                android:layout_height="60dp"/>
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="60dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:id="@+id/team_member_call"
                    android:src="@drawable/call"
                    android:layout_height="60dp"/>
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="60dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:src="@drawable/whatsapp"
                    android:id="@+id/team_member_whatsapp"
                    android:layout_height="60dp"/>
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="60dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:id="@+id/team_member_facebook"
                    android:src="@drawable/facebook_logo"
                    android:layout_height="60dp"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="0.5"
                android:id="@+id/right_arrow_team"
                android:src="@drawable/ic_chevron_right_black_24dp"
                android:layout_height="60dp"/>
        </LinearLayout>
<!--    </RelativeLayout>-->
</LinearLayout>